<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="false">
                <nine-patch android:src="@*com.touchtype.swiftkey:drawable/cloud_sign_in_button_shadow_unpressed" />
            </item>
            <item android:state_pressed="true">
                <nine-patch android:src="@*com.touchtype.swiftkey:drawable/cloud_sign_in_button_shadow_pressed" />
            </item>
        </selector>
    </item>
    <item android:left="@*com.touchtype.swiftkey:dimen/drop_shadow_inset_left" android:top="@*com.touchtype.swiftkey:dimen/drop_shadow_inset_top" android:right="@*com.touchtype.swiftkey:dimen/drop_shadow_inset_right" android:bottom="@*com.touchtype.swiftkey:dimen/drop_shadow_inset_bottom">
        <ripple android:color="@*com.touchtype.swiftkey:color/cloud_sign_in_button_darken_ripple">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@*android:color/button_material_dark" />
                    <corners android:radius="@*com.touchtype.swiftkey:dimen/cloud_sign_in_button_corner_radius" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>
